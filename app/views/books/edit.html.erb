<h1>Editing book</h1>
<%= form_with model: @book do |f| %>

  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Update Book' %>
  
  <div>
    <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", '/books' %>
  </div>

<% end %>