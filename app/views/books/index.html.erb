<!--一覧表示-->
<h1>Books</h1>

<table>
  <thred>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thred>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destory", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %><td>
      </tr>
    <% end %>
  </tbody>
</table>

<!--新規投稿-->
<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error_mes">
    <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

  <%= form_with model: @book do |f| %>
    <% if @book.errors[:title].any? == true && @book.errors[:body].any? == false %>
      <div class="error_field">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :body, "Body" %>
        <%= f.text_area :body %>
      </div>

    <% elsif @book.errors[:title].any? == false && @book.errors[:body].any? == true %>
      <div class="field">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>
      </div>
      <div class="error_field">
        <%= f.label :body, "Body" %>
        <%= f.text_area :body %>
      </div>

    <% else %>
      <div class="error_field">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>
      </div>

      <div class="error_field">
        <%= f.label :body, "Body" %>
        <%= f.text_area :body %>
      </div>
    <% end %>

    <%= f.submit 'Create Book' %>

  <% end %>

<% else %>
  <%= form_with model: @book do |f| %>
    <div class="field">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :body, "Body" %>
      <%= f.text_area :body %>
    </div>

    <%= f.submit 'Create Book' %>
  
  <% end %>
<% end %>